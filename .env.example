# ================================
# HackPrinceton Environment Variables
# ================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ================================
# xAI Grok API Configuration (PRIMARY)
# ================================
# Your xAI API key for Grok Vision (receipt processing)
# Get your key at: https://x.ai/api or https://console.x.ai
XAI_API_KEY=your-xai-api-key-here

# Optional: Override xAI API URL (default: https://api.x.ai/v1)
# XAI_API_URL=https://api.x.ai/v1

# Optional: Specify Grok model (default: grok-2-vision-1212)
# XAI_MODEL=grok-2-vision-1212

# ================================
# iMessage Configuration
# ================================
# Target phone number for receipt extraction (leave empty to accept from ALL senders)
# Format: +1234567890 or any format (auto-normalized)
IMESSAGE_TARGET_NUMBER=

# Watch for new messages continuously (true/false)
# true = Keep running and watch for new messages
# false = Process once and exit
IMESSAGE_WATCH_MODE=true

# Auto-process receipts when new images arrive (true/false)
# true = Automatically send to xAI Grok for processing
# false = Just save the images
IMESSAGE_AUTO_PROCESS=true

# ================================
# OpenAI API (Alternative)
# ================================
# OPENAI_API_KEY=sk-your-openai-api-key-here
# OPENAI_MODEL=gpt-4o

# ================================
# Capital One Nessie API
# ================================
# NESSIE_API_KEY=your-nessie-api-key-here

# ================================
# Database Configuration
# ================================
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# MONGODB_URI=mongodb://localhost:27017/hackprinceton

# ================================
# Authentication
# ================================
# NEXTAUTH_SECRET=your-nextauth-secret-here
# NEXTAUTH_URL=http://localhost:3000

# ================================
# Development Settings
# ================================
NODE_ENV=development

# ================================
# Receipt Processing Settings
# ================================
# Maximum receipts to process in batch
# MAX_RECEIPTS_PER_BATCH=50

# Delay between processing receipts (milliseconds)
# RECEIPT_PROCESSING_DELAY=1000

# ================================
# X (Twitter) API Configuration
# ================================
# Your X API Bearer Token for fetching deals and stock market news
# Get your Bearer Token at: https://developer.twitter.com/en/portal/dashboard
# Create a new app and generate a Bearer Token in the "Keys and tokens" section
X_API_BEARER_TOKEN=your-x-api-bearer-token-here

