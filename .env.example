# ================================
# HackPrinceton Environment Variables
# ================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ================================
# xAI Grok API Configuration (Validation & Autocompletion)
# ================================
# Your xAI API key for Grok (used for receipt validation and item name autocompletion)
# Get your key at: https://x.ai/api or https://console.x.ai
XAI_API_KEY=your-xai-api-key-here

# Optional: Override xAI API URL (default: https://api.x.ai/v1)
# XAI_API_URL=https://api.x.ai/v1

# Optional: Specify Grok VISION model (default: grok-2-vision-latest)
# Use a vision-capable model (e.g., grok-2-vision-latest, grok-2.5-vision-preview)
# XAI_VISION_MODEL=grok-2-vision-latest

# Optional: Specify Grok TEXT model for item name cleanup (default: grok-3)
# This model handles text-only prompts (no images) for standardising item names
# XAI_TEXT_MODEL=grok-3

# ================================
# Google Gemini API Configuration (OCR Processing)
# ================================
# Your Google Gemini API key for OCR/receipt processing
# Get your key at: https://makersuite.google.com/app/apikey or https://aistudio.google.com/app/apikey
# Gemini is used for OCR extraction from receipt images
GEMINI_API_KEY=your-gemini-api-key-here

# Optional: Override Gemini API URL (default: https://generativelanguage.googleapis.com/v1beta)
# GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta

# Optional: Specify Gemini Vision model (default: gemini-2.5-flash)
# Other options: gemini-1.5-pro, gemini-pro-vision
# GEMINI_VISION_MODEL=gemini-2.5-flash


# ================================
# iMessage Configuration
# ================================
# Target phone number for receipt extraction (leave empty to accept from ALL senders)
# Format: +1234567890 or any format (auto-normalized)
IMESSAGE_TARGET_NUMBER=

# Watch for new messages continuously (true/false)
# true = Keep running and watch for new messages
# false = Process once and exit
IMESSAGE_WATCH_MODE=true

# Auto-process receipts when new images arrive (true/false)
# true = Automatically send to xAI Grok for processing
# false = Just save the images
IMESSAGE_AUTO_PROCESS=true

# ================================
# OpenAI API (Alternative)
# ================================
# OPENAI_API_KEY=sk-your-openai-api-key-here
# OPENAI_MODEL=gpt-4o

# ================================
# Capital One Nessie API
# ================================
# NESSIE_API_KEY=your-nessie-api-key-here

# ================================
# Database Configuration
# ================================
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# MONGODB_URI=mongodb://localhost:27017/hackprinceton

# ================================
# Authentication
# ================================
# NEXTAUTH_SECRET=your-nextauth-secret-here
# NEXTAUTH_URL=http://localhost:3000

# ================================
# Development Settings
# ================================
NODE_ENV=development

# ================================
# Receipt Processing Settings
# ================================
# Maximum receipts to process in batch
# MAX_RECEIPTS_PER_BATCH=50

# Delay between processing receipts (milliseconds)
# RECEIPT_PROCESSING_DELAY=1000
